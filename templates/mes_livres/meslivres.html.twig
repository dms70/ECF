{% extends 'base.html.twig' %}

{% block title %}Hello MesLivresController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <!-- SEARCH -->
    <section class="py-6">
      <div class="container">
        <div class="row">
          <div class="col-12">

            <!-- Form -->
            <form class="rounded shadow">
              <div class="input-group input-group-lg">

                <!-- Text -->
                <span class="input-group-text border-0 pe-1">
                  <i class="fe fe-search"></i>
                </span>

                <!-- Input -->
                <input type="text" class="form-control border-0 px-1" aria-label="Recherche de Livres" placeholder="Recherche de Livres" value="">

                <!-- Text -->
                <span class="input-group-text border-0 py-0 ps-1 pe-3">


                  <!-- Button -->
                  <button type="submit" class="btn btn-sm btn-primary">
                    Rechercher
                  </button>

                </span>

              </div>
            </form>

          </div>
        </div> <!-- / .row -->
      </div>
    </section>


           
 <div class="col-6 col-md-6 d-flex"><div class="card mb-6 shadow-light-lg lift lift-lg"></div></div>
 <div class="col-6 col-md-6 d-flex"><div class="card mb-6 shadow-light-lg lift lift-lg"></div></div>
 <div class="col-6 col-md-6 d-flex"><div class="card mb-6 shadow-light-lg lift lift-lg"></div></div>               


   <!-- CONTENT -->
    <section class="py-8 py-md-11 mt-n10 mt-md-n14">
     
      <div class="container">
      {{ "now"|date("d-m-Y") }}
        <div class="row" id="portfolio" data-isotope='{"layoutMode": "fitRows"}'>
          <div class="col-12 col-md-4 product">
                {% for Books in Books %}
       
<!-- Card -->
            <a class="card card-flush mb-7" href="#!">

                      <!-- Image -->
                      <div class="card-zoom">
                      <img class="card-img-top rounded shadow-light-lg" src="{{ vich_uploader_asset(Books, 'imageFile') }}" alt="...">
                      </div>

                      {% if Books.reserved == 1 and date(Books.bookeddate) < date('-2days') %}
                      <span class="badge badge-lg btn-danger text-dark">      
                        DERNIER JOUR AVANT ANNULATION
                      </span>
                      {% endif %}
                      {% if Books.reserved == 1 and date(Books.bookeddate) >  date('-2days') %}
                      <span class="badge badge-lg btn-warning text-dark">      
                        Réservé le :  {{Books.bookeddate|date('d-m-Y')}}
                       </span>
                      {% endif %}


                      {% if Books.borrowed == 1  and date(Books.bookeddate) < date('-30days') %}
                      <span class="badge badge-lg btn-danger  text-dark">      
                       DELAI EMPRUNT DEPASSE
                      </span>
                      {% endif %}

                       {% if Books.borrowed == 1  and date(Books.bookeddate) > date('-30days') %}
                      <span class="badge badge-lg btn-warning  text-dark">      
                       Emprunté le : <i class="fe ms-3"></i> le {{Books.bookeddate|date('d-m-Y')}}
                      </span>
                      {% endif %}


                      {% if Books.borrowed == 1 %}
                       <a href="#!" class="btn w-100 btn btn-info">
                        Emprunté 
                      </a>
                      {% endif %} 

                       {% if Books.reserved == 1 %} 
                        <a  href="{{ path ('removereservation', {'isbn' : Books.isbn})}}" class="btn w-100 btn btn btn-warning text-dark" >Annulation
                        </a>
                       {% endif %}

                        <!-- Footer -->
                        <div class="card-footer">

                        <!-- Heading -->
                        <p class="mb-0  mb-1 ">
                           Auteur : {{Books.Author}}
                        </p>

                        <!-- Text -->
                        <a class="mb-0  mb-1 ">
                          Titre : {{Books.Title}}
                        </a>

                        <!-- Heading -->
                        <p class="mb-0  mb-1 ">
                           Description : {{Books.description}} 
                        </p>
                       

                        <p class="mb-0 ">
                          IBSN : {{Books.isbn}}  
                        </p>


              </div>

            </a>

          </div>
          <div class="col-12 col-md-4 resources">
           {% endfor %}
          </div>
        </div>
        <!-- / .row -->
      </div>
      <!-- / .container -->
    </section>

{% endblock %}


